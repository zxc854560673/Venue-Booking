.building {
  /* height: 300rpx; */
  background-color: #f8f8f8;
}

.building-list {
  margin: 2rpx 30rpx;
  height: 280rpx;
  background-color: rgba(255, 255, 255, 0.6);
  border-bottom: 2rpx solid rgba(178, 178, 178, 0.2);
}

.building-list .building-name {
  font-weight: bold;
  padding: 8rpx 0;
}

.building-list-img {
  width: 200rpx;
  height: 200rpx;
  float: left;
  padding: 40rpx 30rpx 40rpx 20rpx;
}

.building-list-text {
  height: 200rpx;
  float: left;
  padding: 40rpx 0;
}

.building-list-text text {
  display: inline-block;
}
